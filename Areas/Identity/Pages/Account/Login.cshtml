@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row1">
    <section>
        <form id="account" method="post">
            <h2>Login</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="form-label">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg Submit btn-primary">Log in</button>
            </div>
            <div>
                <p>
                    <a class="tatmau" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                </p>
               
                <p>
                    <a class="tatmau" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
               
            </div>
        </form>
    </section>
</div>


<style>
    .row1 {
        width: 450px;
        margin-inline: auto;
        margin-block:40px;
        padding: 15px 25px;
        border-radius: 10px;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2), 0 4px 20px 0 rgba(0,0,0,0.19);
    }

        .row1 h2 {
            text-align: center;
        }

    .tatmau {
        text-decoration: blink;
        color: black;
    }

    .Submit {
        background-color: #333;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
