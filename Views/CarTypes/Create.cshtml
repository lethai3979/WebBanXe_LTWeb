@model LTWeb_CodeFirst.Models.CarType

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CarType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="checkbox-list">
                Companies:
                @foreach (var company in ViewBag.Companies)
                {
                    <div class="form-check">
                        <input class="form-check-input car-type-checkbox" type="checkbox" name="SelectedCompanies" value="@company.Value" id="carType-@company.Value">
                        <label class="form-check-label" for="carType-@company.Value">
                            @company.Text
                        </label>
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
