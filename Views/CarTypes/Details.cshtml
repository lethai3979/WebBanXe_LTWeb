@model LTWeb_CodeFirst.Models.CarType

@{
    ViewData["Title"] = "Details";
}

<h1>Thông tin loại xe</h1>

<div>
    <h4>Chi tiết</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên loại xe:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Tên hãng xe:
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in @ViewBag.CarTypeCompanies)
            {
                <div>@item</div>
            }
        </dd>
        <dt class = "col-sm-2">
            Ẩn
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsDeleted)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Chỉnh sửa</a> |
    <a asp-action="Index">Trở về loại xe</a>
</div>
