@model LTWeb_CodeFirst.Models.Company

@{
    ViewData["Title"] = "Edit";
}

<h1>Chỉnh sửa loại xe</h1>

<h4>Thông tin chi tiết</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Hãng xe</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="checkbox-list">
                Loại xe:
                @foreach (var item in @ViewBag.companyCarTypes)
                {
                    <div style ="margin-left: 30px;">@item</div>
                }
            </div>
            <input type="hidden" asp-for="Id" />
            State
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsDeleted" /> @Html.DisplayNameFor(model => model.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở về trang hãng xe</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
