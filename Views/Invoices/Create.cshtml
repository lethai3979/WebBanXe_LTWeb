@model LTWeb_CodeFirst.Models.Invoice
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "Create";
}

<div style="width:85%;margin:auto;box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);padding:20px;">

    <h4>Hóa đơn</h4>
    <hr />
    <div class="container12" width="80%">
        <div class="row1" style="width:40%;">
            <form asp-action="Create" id="invoiceForm" enctype="multipart/form-data">
                <div>
                    <div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group" width="80%">
                            <label asp-for="Total" class="control-label">Tổng tiền</label>
                            <input asp-for="Total" class="form-control" id="totalInput" readonly />
                            <span asp-validation-for="Total" class="text-danger"></span>
                        </div>
                        <div class="form-group" width="80%">
                            <label asp-for="CreateOn" class="control-label">Thời gian tạo hóa đơn</label>
                            <input asp-for="CreateOn" class="form-control" readonly />
                            <span asp-validation-for="CreateOn" class="text-danger"></span>
                        </div>
                      @*   <div class="form-group" width="80%">
                            <label asp-for="CarId" class="control-label">Mã xe</label>
                            <input asp-for="CarId" class="form-control" readonly />
                        </div> *@
                        <div class="form-group" width="80%">
                            <label asp-for="PromotionId" class="control-label">Khuyến mãi</label>
                            <select asp-for="PromotionId" class="form-control" id="promotionSelect" asp-items="ViewBag.PromotionId">
                                <option value="">-- Chọn khuyến mãi --</option>
                            </select>

                        </div>
                        <div class="form-group" width="80%">
                            <label asp-for="User.FullName" class="control-label">Họ và Tên</label>
                            <input asp-for="User.FullName" class="form-control" readonly />
                        </div>
                        <div class="form-group" width="80%">
                            <label asp-for="User.Email" class="control-label">Email</label>
                            <input asp-for="User.Email" class="form-control" readonly/>
                        </div>
                        @if(Model.User.PhoneNumber != null)
                        {
                            <div class="form-group" width="80%">
                                <label asp-for="User.PhoneNumber" class="control-label">Số điện thoại</label>
                                <input asp-for="User.PhoneNumber" class="form-control" readonly />
                            </div>
                        }
                        
                        @* <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsDeleted" value="Xác nhận" /> @Html.DisplayNameFor(model => model.IsDeleted)
                            </label>
                        </div> *@
                    </div>


                </div>

                <div class="form-group">
                    <input type="submit" value="Xác nhận" class=" bbbbbbbbbbbbb" />
                </div>
            </form>
        </div>
        <div class="row2" style="width:60%;text-align:left;justify-content:left; margin-left:20px;">
            <div style="margin:10px 20px;">
                <div class="">
                    <div style="font-size:28px;font-weight:bold;margin:10px;">
                        @Html.DisplayFor(model => model.Car.Name)
                    </div>
                </div>
                <div class="" style="font-size:25px;margin:10px;">
                    <div>
                        Hãng xe: @Html.DisplayFor(model => model.Car.Company.Name)
                    </div>
                </div>
            </div>

            <div>
                <img src="@Model.Car.CarImages" alt="hinhanh.jpg" width="450px" style="margin-left:20px;margin-bottom:10px; border-radius:5px;" />
            </div>
        </div>

    </div>

</div>

</div>

<div>
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        var userId = user.Id;
        <a asp-action="Index" asp-route-userId="@Model.UserId">Back to List</a>
    }
</div>

</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#promotionSelect').change(function () {
                var promotionId = $(this).val(); 
                var initialTotal = parseFloat(@Model.Total); 

                $.ajax({
                    url: '/Invoices/CalculateTotal',
                    type: 'POST',
                    data: { promotionId: promotionId, initialTotal: initialTotal },
                    success: function (response) {
                       
                        $('#totalInput').val(response.total);
                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                    }
                });
            });
        });

    </script>
}

<style>
   
    .bbbbbbbbbbbbb {
        margin-top:20px;
        background-color: #333;
        color: white;
        padding:10px 20px;
        border-radius:5px;
    }
    .container12 {
        display: flex;
        grid-template-columns: 1fr 1fr; /* Chia layout thành hai cột với độ rộng 50% cho mỗi cột */
    }


    .row1, .row2 {
        width: 100%; /* Lấp đầy không gian của cột */
    }
    
</style>
